<!--h1>Listing Complains</h1-->
<h1>Qujas y Sugerencias recibidas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre Completo</th>
      <th>Telefono</th>
      <th>Email</th>
      <th>Tema</th>
      <th>Contenido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @complains.each do |complain| %>
      <tr>
        <td><%= complain.name %></td>
        <td><%= complain.phone %></td>
        <td><%= complain.email %></td>
        <td><%= complain.subject %></td>
        <td><%= complain.content %></td>
        <td><%= link_to 'Ver', complain  , :class=> 'btn btn-info'%></td>
        <td><%= link_to 'Editar', edit_complain_path(complain) , :class=> 'btn btn-primary'%></td>
        <td><%= link_to 'Eliminar', complain , :class=> 'btn btn-danger' , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

