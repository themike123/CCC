<p id="notice"><%= notice %></p>

<%= link_to 'Nuevo Software', new_program_path , :class=> 'btn btn-primary' %>
<h1>Software</h1>

<table  class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Version</th>
      <th>Plataforma</th>
      <th>Arquitectura</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.nombre %></td>
        <td><%= program.version %></td>
        <td><%= program.plataforma %></td>
        <td><%= program.arquitectura %></td>
        <td><%= program.tipo %></td>
        <td><%= link_to 'Ver', program , :class=> 'btn btn-info'%></td>
        <td><%= link_to 'Editar', edit_program_path(program) , :class=> 'btn btn-primary'%></td>
        <td><%= link_to 'Eliminar', program  , :class=> 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
